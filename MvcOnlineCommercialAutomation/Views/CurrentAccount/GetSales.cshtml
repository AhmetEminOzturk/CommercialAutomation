@using MvcOnlineCommercialAutomation.Models.Entities
@model List<SaleTransaction>
@{
    ViewBag.Title = "GetSales";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Cari Adı: @ViewBag.v2</li>
</ol>
<table class="table table-condensed">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SaleID</td>
            <td>@item.Product.ProductName</td>
            <td>@item.Employee.EmployeeName  @item.Employee.EmployeeSurname</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td>@item.Amount</td>
            <td>@item.Date.ToShortDateString()</td>
            <td><a href="#" class="btn btn-outline-info">Yazdır</a></td>
        </tr>
    }
</table>


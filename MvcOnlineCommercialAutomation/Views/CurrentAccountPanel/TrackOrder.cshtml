@using MvcOnlineCommercialAutomation.Models.Entities
@model List<ShipmentDetail>
@{
    ViewBag.Title = "TrackOrder";
    Layout = "~/Views/Shared/_CurrentAccountLayout.cshtml";
}


<br />
@using (Html.BeginForm("TrackOrder", "CurrentAccountPanel", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Takip Kodu</th>
        <th>Tarih</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Employee</td>
            <td>@k.Receiver</td>
            <td>@k.TrackingNumber</td>
            <td>@k.Date</td>
            <td><a href="/CurrentAccountPanel/CurrentAccountOrderTrack/@k.TrackingNumber" class="btn btn-default" style="background-color:lightcoral; color:white">Detaylar</a></td>
        </tr>
    }
</table>



@model MvcOnlineCommercialAutomation.Models.Entities.ShipmentDetail
@{
    ViewBag.Title = "AddShipment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h2>Yeni Kargo Bilgisi Sayfası</h2>
<br />
<form class="form-group" method="post">
    <label>Takip Kodu</label>
    <input type="text" value="@ViewBag.trackingNumber" class="form-control" readonly name="TrackingNumber" />
    <br />
    <label>Personel</label>
    @Html.TextBoxFor(x => x.Employee, new { @class = "form-control" })
    <br />
    <label>Alıcı</label>
    @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control" })
    <br />
    <label>Tarih</label>
    <input class="form-control" type="date" name="Date" />
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>




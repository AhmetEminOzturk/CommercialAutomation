@using MvcOnlineCommercialAutomation.Models.Entities
@model List<Invoice>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Faturalar</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Seri Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yeni Kalem</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.InvoiceSerialNo @item.InvoiceSequenceNo</td>
            <td>@item.Date</td>
            <td>@item.Time</td>
            <td>@item.Amount ₺</td>
            <td><a href="/Invoice/UpdateInvoice/@item.InvoiceID" class="btn btn-info">Güncelle</a></td>
            <td><a href="/Invoice/DetailInvoice/@item.InvoiceID" class="btn btn-warning">Detaylar</a></td>
            <td><a href="/Invoice/DetailInvoice/@item.InvoiceID" class="btn btn-secondary">Kalem</a></td>
        </tr>
    }
</table>
<a href="/Invoice/AddInvoice/" class="btn btn-success">Fatura Ekle</a>
<br />
<br />
<button type="button" class="btn btn-warning" style="background-color:#d95151; color:white" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup Diyalog Ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.InvoiceSerialNo</td>
                            <td>@x.InvoiceSequenceNo</td>
                            <td>@x.Amount</td>
                        </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>
@model MvcOnlineCommercialAutomation.Models.Entities.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<br />
<h2>Yeni Kategori Sayfası</h2>
<br />
<form method="post">
    <label>Kategori Adı</label>
    @Html.TextBoxFor(x=> x.CategoryName, new  { @class = "form-control" })
    <br />
    <button class="btn btn-outline-info" id="Btn1">Kaydet</button>
    <script>
        $('#Btn1').click(function ()){
            alert("Kategori başarılı şekilde eklendi")
        });
    </script>
</form>
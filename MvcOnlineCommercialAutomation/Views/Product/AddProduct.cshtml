@model MvcOnlineCommercialAutomation.Models.Entities.Product
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Ürün Sayfası</h2>
<br />
<form class="form-group" method="post">
    <label>Ürün Adı</label>
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    <label>Marka</label>
    @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
    <br />
    <label>Ürün Stok</label>
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    <label>Alış Fiyatı</label>
    @Html.TextBoxFor(x => x.PurchasePrice, new { @class = "form-control" })
    <br />
    <label>Satış Fiyatı</label>
    @Html.TextBoxFor(x => x.SalePrice, new { @class = "form-control" })
    <br />
    <label>Kategori</label>
    @Html.DropDownListFor(x=> x.CategoryID, (List<SelectListItem>)ViewBag.list1, new {@class = "form-control"})
    <br />
    <label>Ürün Görseli</label>
    @Html.TextBoxFor(x => x.ProductImage, new { @class = "form-control" })
    <br />
    <label>Ürün Durumu</label>
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-info">Kaydet</button>
</form>
